{%- style -%}
  /* Linens & Hutch Category Grid Styles */
  .lh-categories {
    padding: 5rem 1.5rem 4rem;
    background: #fff;
  }

  @media screen and (min-width: 750px) {
    .lh-categories {
      padding: 6rem 3rem 5rem;
    }
  }

  .lh-categories__inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .lh-categories__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lh-categories__title {
    font-size: 1.125rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__title {
      font-size: 1.25rem;
    }
  }

  .lh-categories__subtitle {
    font-size: 1.0625rem;
    color: #666;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__subtitle {
      font-size: 1.125rem;
    }
  }

  .lh-categories__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }
  }

  .lh-category-card {
    text-decoration: none;
    display: block;
    position: relative;
  }

  .lh-category-card__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 3 / 4;
    background: #f5f5f5;
  }

  .lh-category-card__image-wrapper img,
  .lh-category-card__image-wrapper svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lh-category-card:hover .lh-category-card__image-wrapper img,
  .lh-category-card:hover .lh-category-card__image-wrapper svg {
    transform: scale(1.05);
  }

  .lh-category-card__title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-top: 1rem;
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .lh-category-card__title {
      font-size: 0.9375rem;
    }
  }

  .lh-category-card__title .arrow {
    transition: transform 0.3s ease;
    font-size: 1rem;
  }

  .lh-category-card:hover .lh-category-card__title .arrow {
    transform: translateX(4px);
  }

  /* Carousel controls - centered below */
  .lh-categories__slider-wrapper {
    position: relative;
  }

  .lh-categories__controls {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 2.5rem;
  }

  .lh-categories__controls .slider-button {
    background: #fff;
    border: 1px solid #e0e0e0;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .lh-categories__controls .slider-button:hover {
    border-color: #1a1a1a;
  }

  .lh-categories__controls .slider-button svg {
    width: 10px;
    height: 10px;
  }

  .lh-categories__controls .slider-button--prev svg {
    transform: rotate(90deg);
  }

  .lh-categories__controls .slider-button--next svg {
    transform: rotate(-90deg);
  }
{%- endstyle -%}

<div class="lh-categories">
  <div class="lh-categories__inner">
    <div class="lh-categories__header">
      {%- if section.settings.title != blank -%}
        <h2 class="lh-categories__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="lh-categories__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="lh-categories__slider-wrapper">
      <div class="lh-categories__grid" id="CategoryGrid-{{ section.id }}">
        {%- for block in section.blocks -%}
          <a
            href="{{ block.settings.link | default: '#' }}"
            class="lh-category-card"
            {{ block.shopify_attributes }}
          >
            <div class="lh-category-card__image-wrapper">
              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 750px) 25vw, 50vw',
                    widths: '200, 300, 400, 500, 600, 800'
                }}
              {%- else -%}
                {%- case forloop.index -%}
                  {%- when 1 -%}
                    <img src="{{ 'category-sheets.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- when 2 -%}
                    <img src="{{ 'category-comforters.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- when 3 -%}
                    <img src="{{ 'category-duvet.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- when 4 -%}
                    <img src="{{ 'category-quilts.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- else -%}
                    <img src="{{ 'category-bath.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                {%- endcase -%}
              {%- endif -%}
            </div>
            <h3 class="lh-category-card__title">
              {{ block.settings.title | default: 'Category' }} <span class="arrow">&rarr;</span>
            </h3>
          </a>
        {%- endfor -%}
      </div>

      <div class="lh-categories__controls">
        <button
          type="button"
          class="slider-button slider-button--prev"
          name="previous"
          aria-label="Previous categories"
        >
          <svg viewBox="0 0 14 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"/>
          </svg>
        </button>
        <button
          type="button"
          class="slider-button slider-button--next"
          name="next"
          aria-label="Next categories"
        >
          <svg viewBox="0 0 14 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LH Category Grid",
  "tag": "section",
  "class": "section section--lh-categories",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "SHOP BY CATEGORY"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Everything you need to build your bedroom sanctuary."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category name",
          "default": "SHEETS"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LH Category Grid",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "SHEETS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "COMFORTERS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "DUVET COVERS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "QUILTS"
          }
        }
      ]
    }
  ]
}
{% endschema %}
