{%- style -%}
  /* Linens & Hutch Category Grid Styles */
  .lh-categories {
    padding: 5rem 0 4rem;
    background: #fff;
    overflow: hidden;
    width: 80%;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .lh-categories {
      padding: 6rem 0 5rem;
    }
  }

  .lh-categories__inner {
    max-width: none;
  }

  .lh-categories__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lh-categories__title {
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__title {
      font-size: 1.75rem;
    }
  }

  .lh-categories__subtitle {
    font-size: 1.125rem;
    color: #666;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.08em;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__subtitle {
      font-size: 1.25rem;
    }
  }

  .lh-categories__slider-wrapper {
    overflow: hidden;
    padding: 1.5rem 0;
  }

  .lh-categories__track {
    display: flex;
    width: max-content;
    animation: lh-category-scroll 60s linear infinite;
  }

  .lh-categories__track:hover {
    animation-play-state: paused;
  }

  .lh-categories__track--manual {
    animation: none;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes lh-category-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .lh-category-card {
    text-decoration: none;
    display: block;
    position: relative;
    flex: 0 0 calc(80vw / 4);
    padding: 0 0.75rem;
    box-sizing: border-box;
  }

  @media screen and (max-width: 749px) {
    .lh-category-card {
      flex: 0 0 40vw;
    }
  }

  .lh-category-card__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background: #f5f5f5;
    border-radius: 12px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    transition: box-shadow 0.3s ease;
  }

  .lh-category-card__image-wrapper img,
  .lh-category-card__image-wrapper svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lh-category-card:hover .lh-category-card__image-wrapper {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
  }

  .lh-category-card:hover .lh-category-card__image-wrapper img,
  .lh-category-card:hover .lh-category-card__image-wrapper svg {
    transform: scale(1.05);
  }

  .lh-category-card__title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-top: 1rem;
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .lh-category-card__title {
      font-size: 0.9375rem;
    }
  }

  .lh-category-card__title .arrow {
    transition: transform 0.3s ease;
    font-size: 1rem;
  }

  .lh-category-card:hover .lh-category-card__title .arrow {
    transform: translateX(4px);
  }

  /* Pill Controller - matches hero slideshow */
  .lh-categories__controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 1.5rem auto 0;
    width: fit-content;
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.4);
    box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px rgba(0,0,0,0.1);
  }

  .lh-categories__controls .slider-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .lh-categories__controls .slider-button:hover {
    opacity: 0.6;
  }

  .lh-categories__controls .slider-button svg {
    width: 10px;
    height: 10px;
    opacity: 0.6;
  }

  .lh-categories__controls .slider-button--prev svg {
    transform: rotate(90deg);
  }

  .lh-categories__controls .slider-button--next svg {
    transform: rotate(-90deg);
  }

  .lh-categories__dots {
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .lh-categories__dot {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.2rem;
  }

  .lh-categories__dot .dot {
    width: 6px;
    height: 6px;
    background: rgba(0,0,0,0.25);
    border-radius: 50%;
    display: block;
    transition: all 0.3s ease;
  }

  .lh-categories__dot--active .dot,
  .lh-categories__dot:hover .dot {
    background: rgba(0,0,0,0.7);
    transform: scale(1.15);
  }
{%- endstyle -%}

<div class="lh-categories">
  <div class="lh-categories__inner">
    <div class="lh-categories__header">
      {%- if section.settings.title != blank -%}
        <h2 class="lh-categories__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="lh-categories__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="lh-categories__slider-wrapper">
      <div class="lh-categories__track" id="CategoryGrid-{{ section.id }}">
        {%- comment -%}Render blocks twice for seamless loop{%- endcomment -%}
        {%- for iteration in (1..2) -%}
          {%- for block in section.blocks -%}
            <a
              href="{{ block.settings.link | default: '#' }}"
              class="lh-category-card"
              {% if iteration == 1 %}{{ block.shopify_attributes }}{% endif %}
            >
              <div class="lh-category-card__image-wrapper">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 800
                    | image_tag:
                      loading: 'lazy',
                      sizes: '(min-width: 750px) 25vw, 50vw',
                      widths: '200, 300, 400, 500, 600, 800'
                  }}
                {%- else -%}
                  {%- case forloop.index -%}
                    {%- when 1 -%}
                      <img src="{{ 'category-sheets.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 2 -%}
                      <img src="{{ 'category-comforters.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 3 -%}
                      <img src="{{ 'category-duvet.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 4 -%}
                      <img src="{{ 'category-quilts.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 5 -%}
                      <img src="{{ 'category-bedding-essentials.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 6 -%}
                      <img src="{{ 'category-throw-pillows.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 7 -%}
                      <img src="{{ 'category-blankets.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 8 -%}
                      <img src="{{ 'category-towels.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- else -%}
                      <img src="{{ 'category-bath.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- endcase -%}
                {%- endif -%}
              </div>
              <h3 class="lh-category-card__title">
                {{ block.settings.title | default: 'Category' }} <span class="arrow">&rarr;</span>
              </h3>
            </a>
          {%- endfor -%}
        {%- endfor -%}
      </div>
    </div>

    <div class="lh-categories__controls" id="CategoryControls-{{ section.id }}">
      <button type="button" class="slider-button slider-button--prev" aria-label="Previous">
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="lh-categories__dots">
        {%- for block in section.blocks -%}
          <button
            class="lh-categories__dot{% if forloop.first %} lh-categories__dot--active{% endif %}"
            aria-label="Go to {{ block.settings.title | default: 'category' }}"
            data-index="{{ forloop.index0 }}"
          >
            <span class="dot"></span>
          </button>
        {%- endfor -%}
      </div>
      <button type="button" class="slider-button slider-button--next" aria-label="Next">
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  </div>
</div>

<script>
  (function() {
    var sectionId = '{{ section.id }}';
    var totalCards = {{ section.blocks.size }};

    function init() {
      var track = document.getElementById('CategoryGrid-' + sectionId);
      var controls = document.getElementById('CategoryControls-' + sectionId);
      if (!track || !controls || track.dataset.initialized) return;
      track.dataset.initialized = 'true';

      var prevBtn = controls.querySelector('.slider-button--prev');
      var nextBtn = controls.querySelector('.slider-button--next');
      var dots = controls.querySelectorAll('.lh-categories__dot');
      var resumeTimer = null;
      var currentIndex = 0;

      function getCardWidth() {
        var card = track.querySelector('.lh-category-card');
        return card ? card.offsetWidth : 0;
      }

      function setActiveDot(index) {
        dots.forEach(function(d, i) {
          d.classList.toggle('lh-categories__dot--active', i === index);
        });
      }

      function goToCard(index) {
        if (index < 0) index = totalCards - 1;
        if (index >= totalCards) index = 0;
        currentIndex = index;

        var offsetPx = currentIndex * getCardWidth();

        track.classList.add('lh-categories__track--manual');
        track.style.transform = 'translateX(-' + offsetPx + 'px)';
        track.style.animationDelay = '';
        setActiveDot(currentIndex);

        clearTimeout(resumeTimer);
        resumeTimer = setTimeout(function() {
          /* Calculate how far into the 60s animation this offset represents.
             Total scroll distance = 50% of track width (half, since track is doubled).
             Current offset as fraction of that = offsetPx / (track.scrollWidth / 2).
             Negative delay = that fraction * 60s duration. */
          var totalDistance = track.scrollWidth / 2;
          var fraction = offsetPx / totalDistance;
          var delay = -(fraction * 60);

          track.style.transform = '';
          track.style.animationDelay = delay + 's';
          track.classList.remove('lh-categories__track--manual');
        }, 6000);
      }

      prevBtn.addEventListener('click', function() { goToCard(currentIndex - 1); });
      nextBtn.addEventListener('click', function() { goToCard(currentIndex + 1); });

      dots.forEach(function(dot) {
        dot.addEventListener('click', function() {
          goToCard(parseInt(this.dataset.index));
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

