{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Linens & Hutch Category Grid Styles */
  .lh-categories {
    padding: 5rem 0 4rem;
    background: #fff;
    overflow: hidden;
    width: 80%;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .lh-categories {
      padding: 6rem 0 5rem;
    }
  }

  .lh-categories__inner {
    max-width: none;
  }

  .lh-categories__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lh-categories__title {
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__title {
      font-size: 1.75rem;
    }
  }

  .lh-categories__subtitle {
    font-size: 1.125rem;
    color: #666;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.08em;
  }

  @media screen and (min-width: 750px) {
    .lh-categories__subtitle {
      font-size: 1.25rem;
    }
  }

  .lh-categories__slider-wrapper {
    overflow: hidden;
  }

  .lh-categories__track {
    display: flex;
    width: max-content;
    animation: lh-category-scroll 60s linear infinite;
  }

  .lh-categories__track:hover {
    animation-play-state: paused;
  }

  @keyframes lh-category-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .lh-category-card {
    text-decoration: none;
    display: block;
    position: relative;
    flex: 0 0 calc(80vw / 4);
    padding: 0 0.75rem;
    box-sizing: border-box;
  }

  @media screen and (max-width: 749px) {
    .lh-category-card {
      flex: 0 0 40vw;
    }
  }

  .lh-category-card__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background: #f5f5f5;
  }

  .lh-category-card__image-wrapper img,
  .lh-category-card__image-wrapper svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lh-category-card:hover .lh-category-card__image-wrapper img,
  .lh-category-card:hover .lh-category-card__image-wrapper svg {
    transform: scale(1.05);
  }

  .lh-category-card__title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-top: 1rem;
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .lh-category-card__title {
      font-size: 0.9375rem;
    }
  }

  .lh-category-card__title .arrow {
    transition: transform 0.3s ease;
    font-size: 1rem;
  }

  .lh-category-card:hover .lh-category-card__title .arrow {
    transform: translateX(4px);
  }
{%- endstyle -%}

<div class="lh-categories">
  <div class="lh-categories__inner">
    <div class="lh-categories__header">
      {%- if section.settings.title != blank -%}
        <h2 class="lh-categories__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="lh-categories__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="lh-categories__slider-wrapper">
      <div class="lh-categories__track" id="CategoryGrid-{{ section.id }}">
        {%- comment -%}Render blocks twice for seamless loop{%- endcomment -%}
        {%- for iteration in (1..2) -%}
          {%- for block in section.blocks -%}
            <a
              href="{{ block.settings.link | default: '#' }}"
              class="lh-category-card"
              {% if iteration == 1 %}{{ block.shopify_attributes }}{% endif %}
            >
              <div class="lh-category-card__image-wrapper">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 800
                    | image_tag:
                      loading: 'lazy',
                      sizes: '(min-width: 750px) 25vw, 50vw',
                      widths: '200, 300, 400, 500, 600, 800'
                  }}
                {%- else -%}
                  {%- case forloop.index -%}
                    {%- when 1 -%}
                      <img src="{{ 'category-sheets.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 2 -%}
                      <img src="{{ 'category-comforters.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 3 -%}
                      <img src="{{ 'category-duvet.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 4 -%}
                      <img src="{{ 'category-quilts.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 5 -%}
                      <img src="{{ 'category-bedding-essentials.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 6 -%}
                      <img src="{{ 'category-throw-pillows.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 7 -%}
                      <img src="{{ 'category-blankets.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- when 8 -%}
                      <img src="{{ 'category-towels.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                    {%- else -%}
                      <img src="{{ 'category-bath.jpg' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy">
                  {%- endcase -%}
                {%- endif -%}
              </div>
              <h3 class="lh-category-card__title">
                {{ block.settings.title | default: 'Category' }} <span class="arrow">&rarr;</span>
              </h3>
            </a>
          {%- endfor -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
