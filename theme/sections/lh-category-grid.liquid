  "name": "LH Category Grid",
  "tag": "section",
  "class": "section section--lh-categories",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "SHOP BY CATEGORY"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Everything you need to build your bedroom sanctuary."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category name",
          "default": "SHEETS"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LH Category Grid",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "SHEETS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "COMFORTERS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "DUVET COVERS"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "QUILTS"
          }
        }
      ]
    }
  ]
}
{% endschema %}
