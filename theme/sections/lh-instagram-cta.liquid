<section class="lh-instagram-cta" style="background-color: #E5E5DF;">
  <div class="lh-instagram-cta__content">
    {% if section.settings.heading %}
      <h2 class="lh-instagram-cta__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.hashtag %}
      <div class="lh-instagram-cta__hashtag">{{ section.settings.hashtag }}</div>
    {% endif %}

    {% if section.settings.description %}
      <p class="lh-instagram-cta__description">{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.link_url %}
      <a href="{{ section.settings.link_url }}" class="lh-instagram-cta__link" target="_blank" rel="noopener noreferrer">
        {{ section.settings.link_text }} â†’
      </a>
    {% endif %}
  </div>

  <!-- Instagram Feed Carousel -->
  <div class="lh-instagram-carousel">
    <div class="lh-instagram-carousel__container">
      <button class="lh-instagram-carousel__nav lh-instagram-carousel__nav--prev" aria-label="Previous images">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="lh-instagram-carousel__track-wrapper">
        <div class="lh-instagram-carousel__track">
          {% for i in (1..6) %}
            <div class="lh-instagram-carousel__item">
              <a href="{{ section.settings.link_url | default: 'https://instagram.com/linensandhutch' }}" target="_blank" rel="noopener noreferrer" class="lh-instagram-carousel__link">
                <img
                  src="{{ 'instagram-' | append: i | append: '.jpg' | asset_url }}"
                  alt="Linens & Hutch lifestyle image {{ i }}"
                  class="lh-instagram-carousel__image"
                  loading="lazy"
                >
                <div class="lh-instagram-carousel__overlay">
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="2" y="2" width="20" height="20" rx="5" stroke="white" stroke-width="2"/>
                    <circle cx="12" cy="12" r="4" stroke="white" stroke-width="2"/>
                    <circle cx="17.5" cy="6.5" r="1.5" fill="white"/>
                  </svg>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>

      <button class="lh-instagram-carousel__nav lh-instagram-carousel__nav--next" aria-label="Next images">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 6L15 12L9 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</section>

<style>
  .lh-instagram-cta {
    padding: 5rem 1rem;
  }

  .lh-instagram-cta__content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .lh-instagram-cta__heading {
    font-size: 1.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
  }

  .lh-instagram-cta__hashtag {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }

  .lh-instagram-cta__description {
    font-size: 1.125rem;
    color: #1a1a1a;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .lh-instagram-cta__link {
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    letter-spacing: 0.05em;
    display: inline-block;
    transition: text-decoration 0.3s ease;
  }

  .lh-instagram-cta__link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .lh-instagram-cta {
      padding: 3rem 1rem;
    }

    .lh-instagram-cta__heading {
      font-size: 1.5rem;
    }

    .lh-instagram-cta__hashtag {
      font-size: 1.75rem;
    }
  }

  /* Instagram Carousel Styles */
  .lh-instagram-carousel {
    margin-top: 3rem;
    padding-bottom: 5rem;
    width: 100%;
  }

  .lh-instagram-carousel__container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
  }

  .lh-instagram-carousel__track-wrapper {
    overflow: hidden;
    flex: 1;
    margin: 0 1rem;
  }

  .lh-instagram-carousel__track {
    display: flex;
    gap: 0.5rem;
    transition: transform 0.4s ease;
  }

  .lh-instagram-carousel__item {
    flex: 0 0 calc(16.666% - 0.42rem);
    aspect-ratio: 1;
  }

  .lh-instagram-carousel__link {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .lh-instagram-carousel__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .lh-instagram-carousel__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .lh-instagram-carousel__link:hover .lh-instagram-carousel__image {
    transform: scale(1.05);
  }

  .lh-instagram-carousel__link:hover .lh-instagram-carousel__overlay {
    opacity: 1;
  }

  .lh-instagram-carousel__nav {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border: none;
    background: transparent;
    color: #1a1a1a;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .lh-instagram-carousel__nav:hover {
    opacity: 0.7;
  }

  .lh-instagram-carousel__nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  @media (max-width: 1024px) {
    .lh-instagram-carousel__item {
      flex: 0 0 calc(25% - 0.375rem);
    }
  }

  @media (max-width: 768px) {
    .lh-instagram-carousel__item {
      flex: 0 0 calc(33.333% - 0.33rem);
    }

    .lh-instagram-carousel__nav {
      width: 40px;
      height: 40px;
    }

    .lh-instagram-carousel {
      padding-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .lh-instagram-carousel__item {
      flex: 0 0 calc(50% - 0.25rem);
    }

    .lh-instagram-carousel__track-wrapper {
      margin: 0 0.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.lh-instagram-carousel');
    if (!carousel) return;

    const track = carousel.querySelector('.lh-instagram-carousel__track');
    const prevBtn = carousel.querySelector('.lh-instagram-carousel__nav--prev');
    const nextBtn = carousel.querySelector('.lh-instagram-carousel__nav--next');
    const items = carousel.querySelectorAll('.lh-instagram-carousel__item');

    if (!track || !prevBtn || !nextBtn || items.length === 0) return;

    let currentIndex = 0;

    function getVisibleCount() {
      const width = window.innerWidth;
      if (width <= 480) return 2;
      if (width <= 768) return 3;
      if (width <= 1024) return 4;
      return 6;
    }

    function getMaxIndex() {
      const visibleCount = getVisibleCount();
      return Math.max(0, items.length - visibleCount);
    }

    function updateCarousel() {
      const visibleCount = getVisibleCount();
      const itemWidth = 100 / visibleCount;
      const gap = 0.5; // rem converted to approximate percentage
      const offset = currentIndex * (itemWidth + gap * 0.5);
      track.style.transform = `translateX(-${offset}%)`;

      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= getMaxIndex();
    }

    prevBtn.addEventListener('click', function() {
      if (currentIndex > 0) {
        currentIndex--;
        updateCarousel();
      }
    });

    nextBtn.addEventListener('click', function() {
      if (currentIndex < getMaxIndex()) {
        currentIndex++;
        updateCarousel();
      }
    });

    window.addEventListener('resize', function() {
      currentIndex = Math.min(currentIndex, getMaxIndex());
      updateCarousel();
    });

    updateCarousel();
  });
</script>

