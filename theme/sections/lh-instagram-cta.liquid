{%- style -%}
  .lh-instagram-cta {
    padding: 5rem 0 4rem;
    background: linear-gradient(90deg, #e8e1f0 0%, #f8f6fb 30%, #fcfbfd 50%, #f8f6fb 70%, #e8e1f0 100%);
    overflow: hidden;
  }

  .lh-instagram-cta__content {
    max-width: 600px;
    margin: 0 auto 3rem;
    text-align: center;
    padding: 0 1.5rem;
  }

  .lh-instagram-cta__heading {
    font-size: 1.75rem;
    font-weight: 500;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
  }

  @media screen and (min-width: 750px) {
    .lh-instagram-cta__heading {
      font-size: 1.75rem;
    }
  }

  .lh-instagram-cta__hashtag {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }

  .lh-instagram-cta__description {
    font-size: 1.125rem;
    color: #555;
    margin: 0 0 2rem 0;
    line-height: 1.6;
    letter-spacing: 0.08em;
  }

  .lh-instagram-cta__link {
    font-size: 1.125rem;
    font-weight: 500;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    letter-spacing: 0.15em;
    display: inline-block;
    transition: opacity 0.3s ease;
  }

  .lh-instagram-cta__link:hover {
    opacity: 0.6;
  }

  /* Carousel */
  .lh-instagram-carousel {
    width: 100%;
    padding: 1.5rem 0;
  }

  .lh-instagram-carousel__track {
    display: flex;
    width: max-content;
    animation: lh-insta-scroll 60s linear infinite;
  }

  .lh-instagram-carousel__track:hover {
    animation-play-state: paused;
  }

  .lh-instagram-carousel__track--manual {
    animation: none;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes lh-insta-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .lh-instagram-carousel__item {
    flex: 0 0 calc(100vw / 5);
    padding: 0 0.5rem;
    box-sizing: border-box;
  }

  @media screen and (max-width: 749px) {
    .lh-instagram-carousel__item {
      flex: 0 0 50vw;
    }
  }

  .lh-instagram-carousel__link {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 12px;
    aspect-ratio: 1 / 1;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .lh-instagram-carousel__link:hover {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
    transform: translateY(-4px);
  }

  .lh-instagram-carousel__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lh-instagram-carousel__link:hover .lh-instagram-carousel__image {
    transform: scale(1.05);
  }

  .lh-instagram-carousel__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .lh-instagram-carousel__link:hover .lh-instagram-carousel__overlay {
    opacity: 1;
  }

  /* Pill Controller */
  .lh-instagram-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 2rem auto 0;
    width: fit-content;
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.4);
    box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px rgba(0,0,0,0.1);
  }

  .lh-instagram-controls .slider-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .lh-instagram-controls .slider-button:hover {
    opacity: 0.6;
  }

  .lh-instagram-controls .slider-button svg {
    width: 10px;
    height: 10px;
    opacity: 0.6;
  }

  .lh-instagram-controls .slider-button--prev svg {
    transform: rotate(90deg);
  }

  .lh-instagram-controls .slider-button--next svg {
    transform: rotate(-90deg);
  }

  .lh-instagram-dots {
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .lh-instagram-dot {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.2rem;
  }

  .lh-instagram-dot .dot {
    width: 6px;
    height: 6px;
    background: rgba(0,0,0,0.25);
    border-radius: 50%;
    display: block;
    transition: all 0.3s ease;
  }

  .lh-instagram-dot--active .dot,
  .lh-instagram-dot:hover .dot {
    background: rgba(0,0,0,0.7);
    transform: scale(1.15);
  }

  @media (max-width: 749px) {
    .lh-instagram-cta {
      padding: 3rem 0;
    }

    .lh-instagram-cta__heading {
      font-size: 1.5rem;
    }

    .lh-instagram-cta__hashtag {
      font-size: 1.75rem;
    }
  }
{%- endstyle -%}

<section class="lh-instagram-cta">
  <div class="lh-instagram-cta__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="lh-instagram-cta__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.hashtag != blank -%}
      <div class="lh-instagram-cta__hashtag">{{ section.settings.hashtag }}</div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="lh-instagram-cta__description">{{ section.settings.description }}</p>
    {%- endif -%}

    {%- if section.settings.link_text != blank -%}
      <a href="{{ section.settings.link_url | default: '#' }}" class="lh-instagram-cta__link" target="_blank" rel="noopener noreferrer">
        {{ section.settings.link_text }} &rarr;
      </a>
    {%- endif -%}
  </div>

  <div class="lh-instagram-carousel">
    <div class="lh-instagram-carousel__track" id="InstaTrack-{{ section.id }}">
      {%- for iteration in (1..2) -%}
        {%- for i in (1..6) -%}
          <div class="lh-instagram-carousel__item">
            <a href="{{ section.settings.link_url | default: '#' }}" target="_blank" rel="noopener noreferrer" class="lh-instagram-carousel__link">
              <img
                src="{{ 'instagram-' | append: i | append: '.jpg' | asset_url }}"
                alt="Linens & Hutch lifestyle image {{ i }}"
                class="lh-instagram-carousel__image"
                loading="lazy"
              >
              <div class="lh-instagram-carousel__overlay">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="2" y="2" width="20" height="20" rx="5" stroke="white" stroke-width="2"/>
                  <circle cx="12" cy="12" r="4" stroke="white" stroke-width="2"/>
                  <circle cx="17.5" cy="6.5" r="1.5" fill="white"/>
                </svg>
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>

  <div class="lh-instagram-controls" id="InstaControls-{{ section.id }}">
    <button type="button" class="slider-button slider-button--prev" aria-label="Previous">
      <span class="svg-wrapper">
        {{- 'icon-caret.svg' | inline_asset_content -}}
      </span>
    </button>
    <div class="lh-instagram-dots">
      {%- for i in (1..6) -%}
        <button
          class="lh-instagram-dot{% if forloop.first %} lh-instagram-dot--active{% endif %}"
          aria-label="Go to image {{ i }}"
          data-index="{{ forloop.index0 }}"
        >
          <span class="dot"></span>
        </button>
      {%- endfor -%}
    </div>
    <button type="button" class="slider-button slider-button--next" aria-label="Next">
      <span class="svg-wrapper">
        {{- 'icon-caret.svg' | inline_asset_content -}}
      </span>
    </button>
  </div>
</section>

<script>
  (function() {
    var sectionId = '{{ section.id }}';
    var totalItems = 6;

    function init() {
      var track = document.getElementById('InstaTrack-' + sectionId);
      var controls = document.getElementById('InstaControls-' + sectionId);
      if (!track || !controls || track.dataset.initialized) return;
      track.dataset.initialized = 'true';

      var prevBtn = controls.querySelector('.slider-button--prev');
      var nextBtn = controls.querySelector('.slider-button--next');
      var dots = controls.querySelectorAll('.lh-instagram-dot');
      var resumeTimer = null;
      var currentIndex = 0;

      function getItemWidth() {
        var item = track.querySelector('.lh-instagram-carousel__item');
        return item ? item.offsetWidth : 0;
      }

      function setActiveDot(index) {
        dots.forEach(function(d, i) {
          d.classList.toggle('lh-instagram-dot--active', i === index);
        });
      }

      function goToItem(rawIndex) {
        var itemW = getItemWidth();

        if (rawIndex >= totalItems) {
          track.style.transition = 'none';
          track.style.transform = 'translateX(-' + (currentIndex * itemW) + 'px)';
          track.offsetHeight;
          currentIndex = 0;
          var targetPx = totalItems * itemW;
          track.classList.add('lh-instagram-carousel__track--manual');
          track.style.transition = '';
          track.style.transform = 'translateX(-' + targetPx + 'px)';
          setTimeout(function() {
            track.style.transition = 'none';
            track.style.transform = 'translateX(0px)';
            track.offsetHeight;
            track.style.transition = '';
          }, 520);
        } else if (rawIndex < 0) {
          track.style.transition = 'none';
          track.style.transform = 'translateX(-' + (totalItems * itemW) + 'px)';
          track.offsetHeight;
          currentIndex = totalItems - 1;
          var targetPx = currentIndex * itemW;
          track.classList.add('lh-instagram-carousel__track--manual');
          track.style.transition = '';
          track.style.transform = 'translateX(-' + targetPx + 'px)';
        } else {
          currentIndex = rawIndex;
          track.classList.add('lh-instagram-carousel__track--manual');
          track.style.transform = 'translateX(-' + (currentIndex * itemW) + 'px)';
        }

        track.style.animationDelay = '';
        setActiveDot(currentIndex);

        clearTimeout(resumeTimer);
        resumeTimer = setTimeout(function() {
          var offsetPx = currentIndex * itemW;
          var totalDistance = track.scrollWidth / 2;
          var fraction = offsetPx / totalDistance;
          var delay = -(fraction * 60);
          track.style.transform = '';
          track.style.animationDelay = delay + 's';
          track.classList.remove('lh-instagram-carousel__track--manual');
        }, 6000);
      }

      prevBtn.addEventListener('click', function() { goToItem(currentIndex - 1); });
      nextBtn.addEventListener('click', function() { goToItem(currentIndex + 1); });

      dots.forEach(function(dot) {
        dot.addEventListener('click', function() {
          goToItem(parseInt(this.dataset.index));
        });
      });

      var lastDotIndex = -1;
      var allItems = track.querySelectorAll('.lh-instagram-carousel__item');
      var pill = controls;
      function pollPosition() {
        if (!track.classList.contains('lh-instagram-carousel__track--manual')) {
          var pillRight = pill.getBoundingClientRect().right;
          var bestIdx = 0;
          var bestDist = Infinity;
          for (var i = 0; i < allItems.length; i++) {
            var itemLeft = allItems[i].getBoundingClientRect().left;
            var dist = pillRight - itemLeft;
            if (dist >= 0 && dist < bestDist) {
              bestDist = dist;
              bestIdx = i % totalItems;
            }
          }
          if (bestIdx !== lastDotIndex) {
            lastDotIndex = bestIdx;
            setActiveDot(bestIdx);
          }
        }
        requestAnimationFrame(pollPosition);
      }
      requestAnimationFrame(pollPosition);
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

