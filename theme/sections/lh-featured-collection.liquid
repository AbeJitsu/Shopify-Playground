{%- style -%}
  .lh-fc {
    padding: 5rem 0 4rem;
    background: #fff;
    overflow: hidden;
    width: 80%;
    margin: 0 auto;
  }

  @media (min-width: 750px) {
    .lh-fc {
      padding: 6rem 0 5rem;
    }
  }

  .lh-fc__inner {
    max-width: none;
  }

  .lh-fc__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lh-fc__title {
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
  }

  @media (min-width: 750px) {
    .lh-fc__title {
      font-size: 1.75rem;
    }
  }

  .lh-fc__subtitle {
    font-size: 1.125rem;
    color: #666;
    margin: 0 auto;
    font-weight: 400;
    letter-spacing: 0.08em;
    max-width: 600px;
  }

  @media (min-width: 750px) {
    .lh-fc__subtitle {
      font-size: 1.25rem;
    }
  }

  /* Slider */
  .lh-fc__slider-wrapper {
    overflow: hidden;
    padding: 1.5rem 0;
  }

  .lh-fc__track {
    display: flex;
    width: max-content;
    animation: lh-fc-scroll 60s linear infinite;
  }

  .lh-fc__track:hover {
    animation-play-state: paused;
  }

  .lh-fc__track--manual {
    animation: none;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes lh-fc-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Card */
  .lh-fc__card {
    text-decoration: none;
    display: block;
    position: relative;
    flex: 0 0 calc(80vw / 4);
    padding: 0 0.75rem;
    box-sizing: border-box;
  }

  @media (max-width: 749px) {
    .lh-fc__card {
      flex: 0 0 40vw;
    }
  }

  .lh-fc__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  /* Card image */
  .lh-fc__img-wrap {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background: #f0ebe3;
    border-radius: 12px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    transition: box-shadow 0.3s ease;
  }

  .lh-fc__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lh-fc__card:hover .lh-fc__img-wrap {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
  }

  .lh-fc__card:hover .lh-fc__img {
    transform: scale(1.05);
  }

  .lh-fc__badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: #1a1a1a;
    color: #fff;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.375rem 0.75rem;
    border-radius: 4px;
    z-index: 1;
  }

  /* Card content */
  .lh-fc__name {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    margin: 1rem 0 0.5rem;
    line-height: 1.4;
    transition: all 0.3s ease;
  }

  @media (min-width: 750px) {
    .lh-fc__name {
      font-size: 0.9375rem;
    }
  }

  .lh-fc__name .arrow {
    transition: transform 0.3s ease;
    font-size: 1rem;
  }

  .lh-fc__card:hover .lh-fc__name .arrow {
    transform: translateX(4px);
  }

  .lh-fc__stars {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    margin-bottom: 0.5rem;
    font-size: 0.9375rem;
    color: #666;
    letter-spacing: 0.03em;
  }

  .lh-fc__stars svg {
    color: #f5a623;
  }

  .lh-fc__price {
    font-size: 1.0625rem;
    font-weight: 500;
    color: #1a1a1a;
    margin: 0 0 0.75rem;
    letter-spacing: 0.03em;
  }

  /* Color swatches */
  .lh-fc__swatches {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .lh-fc__swatch {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid transparent;
    cursor: pointer;
    transition: border-color 0.2s ease;
    padding: 0;
    background: none;
  }

  .lh-fc__swatch:hover,
  .lh-fc__swatch.active {
    border-color: #1a1a1a;
  }

  .lh-fc__swatch-inner {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 1px solid rgba(0,0,0,0.1);
    box-sizing: border-box;
    pointer-events: none;
  }

  /* Pill Controller - matches hero slideshow */
  .lh-fc__controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 1.5rem auto 0;
    width: fit-content;
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.4);
    box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px rgba(0,0,0,0.1);
  }

  .lh-fc__controls .slider-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .lh-fc__controls .slider-button:hover {
    opacity: 0.6;
  }

  .lh-fc__controls .slider-button svg {
    width: 10px;
    height: 10px;
    opacity: 0.6;
  }

  .lh-fc__controls .slider-button--prev svg {
    transform: rotate(90deg);
  }

  .lh-fc__controls .slider-button--next svg {
    transform: rotate(-90deg);
  }

  .lh-fc__dots {
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .lh-fc__dot {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.2rem;
  }

  .lh-fc__dot .dot {
    width: 6px;
    height: 6px;
    background: rgba(0,0,0,0.25);
    border-radius: 50%;
    display: block;
    transition: all 0.3s ease;
  }

  .lh-fc__dot--active .dot,
  .lh-fc__dot:hover .dot {
    background: rgba(0,0,0,0.7);
    transform: scale(1.15);
  }

  /* View all */
  .lh-fc__view-all {
    text-align: center;
    margin-top: 1.5rem;
  }

  .lh-fc__view-all a {
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid #1a1a1a;
    padding-bottom: 2px;
    transition: opacity 0.3s ease;
  }

  .lh-fc__view-all a:hover {
    opacity: 0.6;
  }
{%- endstyle -%}

