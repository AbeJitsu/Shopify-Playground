        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="lh-fc__dots">
        {%- for i in (1..product_count) -%}
          <button
            class="lh-fc__dot{% if forloop.first %} lh-fc__dot--active{% endif %}"
            aria-label="Go to product {{ forloop.index }}"
            data-index="{{ forloop.index0 }}"
          >
            <span class="dot"></span>
          </button>
        {%- endfor -%}
      </div>
      <button type="button" class="slider-button slider-button--next" aria-label="Next">
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>

    {% if section.settings.view_all_link != blank %}
      <div class="lh-fc__view-all">
        <a href="{{ section.settings.view_all_link }}">View All</a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  (function() {
    var sectionId = '{{ section.id }}';
    var totalCards = {{ product_count }};

    function init() {
      var track = document.getElementById('FCTrack-' + sectionId);
      var controls = document.getElementById('FCControls-' + sectionId);
      var section = document.getElementById('FeaturedCollection-' + sectionId);
      if (!track || !controls || track.dataset.initialized) return;
      track.dataset.initialized = 'true';

      var prevBtn = controls.querySelector('.slider-button--prev');
      var nextBtn = controls.querySelector('.slider-button--next');
      var dots = controls.querySelectorAll('.lh-fc__dot');
      var resumeTimer = null;
      var currentIndex = 0;

      function getCardWidth() {
        var card = track.querySelector('.lh-fc__card');
        return card ? card.offsetWidth : 0;
      }

      function setActiveDot(index) {
        dots.forEach(function(d, i) {
          d.classList.toggle('lh-fc__dot--active', i === index);
        });
      }

      function goToCard(rawIndex) {
        var cardW = getCardWidth();

        /* Forward wrap: last → first */
        if (rawIndex >= totalCards) {
          track.style.transition = 'none';
          track.style.transform = 'translateX(-' + (currentIndex * cardW) + 'px)';
          track.offsetHeight;
          currentIndex = 0;
          var targetPx = totalCards * cardW;
          track.classList.add('lh-fc__track--manual');
          track.style.transition = '';
          track.style.transform = 'translateX(-' + targetPx + 'px)';
          setTimeout(function() {
            track.style.transition = 'none';
            track.style.transform = 'translateX(0px)';
            track.offsetHeight;
            track.style.transition = '';
          }, 520);

        /* Backward wrap: first → last */
        } else if (rawIndex < 0) {
          track.style.transition = 'none';
          track.style.transform = 'translateX(-' + (totalCards * cardW) + 'px)';
          track.offsetHeight;
          currentIndex = totalCards - 1;
          track.classList.add('lh-fc__track--manual');
          track.style.transition = '';
          track.style.transform = 'translateX(-' + (currentIndex * cardW) + 'px)';

        /* Normal navigation */
        } else {
          currentIndex = rawIndex;
          track.classList.add('lh-fc__track--manual');
          track.style.transform = 'translateX(-' + (currentIndex * cardW) + 'px)';
        }

        track.style.animationDelay = '';
        setActiveDot(currentIndex);

        clearTimeout(resumeTimer);
        resumeTimer = setTimeout(function() {
          var offsetPx = currentIndex * getCardWidth();
          var totalDistance = track.scrollWidth / 2;
          var fraction = offsetPx / totalDistance;
          var delay = -(fraction * 60);

          track.style.transform = '';
          track.style.animationDelay = delay + 's';
          track.classList.remove('lh-fc__track--manual');
        }, 6000);
      }

      prevBtn.addEventListener('click', function() { goToCard(currentIndex - 1); });
      nextBtn.addEventListener('click', function() { goToCard(currentIndex + 1); });

      dots.forEach(function(dot) {
        dot.addEventListener('click', function() {
          goToCard(parseInt(this.dataset.index));
        });
      });

      /* Poll animation position to update dots during auto-scroll */
      var lastDotIndex = -1;
      var pill = controls;
      var allCards = track.querySelectorAll('.lh-fc__card');
      function pollPosition() {
        if (!track.classList.contains('lh-fc__track--manual')) {
          var pillRight = pill.getBoundingClientRect().right;
          var bestIdx = 0;
          var bestDist = Infinity;
          for (var i = 0; i < allCards.length; i++) {
            var cardLeft = allCards[i].getBoundingClientRect().left;
            var dist = pillRight - cardLeft;
            if (dist >= 0 && dist < bestDist) {
              bestDist = dist;
              bestIdx = i % totalCards;
            }
          }
          if (bestIdx !== lastDotIndex) {
            lastDotIndex = bestIdx;
            setActiveDot(bestIdx);
          }
        }
        requestAnimationFrame(pollPosition);
      }
      requestAnimationFrame(pollPosition);

      /* Color swatch image swapping */
      if (section) {
        section.querySelectorAll('[data-product-card]').forEach(function(card) {
          var img = card.querySelector('.lh-fc__img');
          var swatches = card.querySelectorAll('.lh-fc__swatch');

          swatches.forEach(function(swatch) {
            swatch.addEventListener('click', function(e) {
              e.preventDefault();
              e.stopPropagation();
              var idx = parseInt(swatch.getAttribute('data-variant-index'));
              var src;

              if (idx === 0) {
                src = img.getAttribute('data-primary-src');
              } else if (idx <= 3) {
                src = img.getAttribute('data-variant-' + idx + '-src');
              } else {
                src = img.getAttribute('data-primary-src');
              }

              if (src) img.src = src;

              swatches.forEach(function(s) { s.classList.remove('active'); });
              swatch.classList.add('active');
            });
          });
        });
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

