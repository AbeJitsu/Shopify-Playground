{%- style -%}
  .featured-collection {
    background-color: #fafaf8;
    padding: 4rem 1.5rem;
  }

  @media (min-width: 768px) {
    .featured-collection {
      padding: 5rem 2rem;
    }
  }

  .featured-collection__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .featured-collection__title {
    font-size: 2.5rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin: 0 0 0.5rem 0;
    color: #1a1a1a;
  }

  @media (min-width: 768px) {
    .featured-collection__title {
      font-size: 3rem;
    }
  }

  .featured-collection__subtitle {
    font-size: 1.125rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .featured-collection__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .featured-collection__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-card__image-container {
    position: relative;
    width: 100%;
    padding-bottom: 133.33%;
    overflow: hidden;
    border-radius: 0.5rem;
    background-color: #f0ebe3;
    margin-bottom: 1rem;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product-card__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .product-card__title {
    font-size: 1.25rem;
    font-weight: 500;
    color: #1a1a1a;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .product-card__rating {
    font-size: 1rem;
    color: #ffc107;
    margin-bottom: 0.75rem;
    letter-spacing: 0.1em;
  }

  .product-card__price {
    font-size: 1.375rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-top: auto;
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
{%- endstyle -%}

<section class="featured-collection">
  <div class="featured-collection__header">
    <h2 class="featured-collection__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="featured-collection__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="featured-collection__grid">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <div class="product-card">
          <a href="{{ block.settings.product_link }}" class="product-card__link">
            <div class="product-card__image-container">
              {% if block.settings.product_image %}
                <img
                  src="{{ block.settings.product_image | image_url: width: 500 }}"
                  alt="{{ block.settings.product_title }}"
                  class="product-card__image"
                >
              {% else %}
                <div class="product-card__image" style="background-color: #e0d9ce;"></div>
              {% endif %}
            </div>
          </a>
          <div class="product-card__content">
            <h3 class="product-card__title">{{ block.settings.product_title }}</h3>
            <div class="product-card__rating">{{ block.settings.product_rating }}</div>
            <p class="product-card__price">{{ block.settings.product_price }}</p>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {%- comment -%} Fallback products based on section title {%- endcomment -%}
      {% if section.settings.title contains 'JUST IN' %}
        {%- assign fallback_products = "Textured Cotton Comforter - Dune|product-comforter-dune.jpg|$79.99,Textured Cotton Comforter - Tan|product-comforter-tan.jpg|$79.99,Textured Cotton Comforter - Olive|product-comforter-olive.jpg|$79.99" | split: "," -%}
      {% elsif section.settings.title contains 'BEST SELLERS' %}
        {%- assign fallback_products = "Plush Gel-Fiber Pillow (2-Pack)|product-gel-pillow.png|$29.99,300TC Cotton Sheet Set - Gray|product-sheets-gray.jpg|$49.99,300TC Cotton Sheet Set - Ivory|product-sheets-ivory.jpg|$49.99" | split: "," -%}
      {% elsif section.settings.title contains 'COTTON' %}
        {%- assign fallback_products = "300TC Cotton Sheet Set - White|product-sheets-white.jpg|$49.99,300TC Cotton Sheet Set - Mauve|product-sheets-mauve.jpg|$49.99,300TC Cotton Sheet Set - Blue|product-sheets-blue.jpg|$49.99" | split: "," -%}
      {% else %}
        {%- assign fallback_products = "300TC Cotton Sheet Set - White|product-sheets-white.jpg|$49.99,300TC Cotton Sheet Set - Gray|product-sheets-gray.jpg|$49.99,300TC Cotton Sheet Set - Ivory|product-sheets-ivory.jpg|$49.99" | split: "," -%}
      {% endif %}

      {% for product_data in fallback_products %}
        {%- assign parts = product_data | split: "|" -%}
        {%- assign title = parts[0] -%}
        {%- assign image = parts[1] -%}
        {%- assign price = parts[2] -%}
        <div class="product-card">
          <a href="#" class="product-card__link">
            <div class="product-card__image-container">
              <img
                src="{{ image | asset_url }}"
                alt="{{ title }}"
                class="product-card__image"
                loading="lazy"
              >
            </div>
          </a>
          <div class="product-card__content">
            <h3 class="product-card__title">{{ title }}</h3>
            <div class="product-card__rating">★★★★★</div>
            <p class="product-card__price">{{ price }}</p>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Just In"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Discover new arrivals designed to bring style to every moment."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "Premium Leather Jacket"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_rating",
          "label": "Product Rating",
          "default": "★★★★★"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price",
          "default": "$89.99"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "blocks": [
        {
          "type": "product",
          "settings": {
            "product_title": "Premium Leather Jacket",
            "product_rating": "★★★★★",
            "product_price": "$89.99"
          }
        },
        {
          "type": "product",
          "settings": {
            "product_title": "Classic Cotton Tee",
            "product_rating": "★★★★☆",
            "product_price": "$29.99"
          }
        },
        {
          "type": "product",
          "settings": {
            "product_title": "Denim Blue Jeans",
            "product_rating": "★★★★★",
            "product_price": "$64.99"
          }
        }
      ]
    }
  ]
}
{% endschema %}
