{%- style -%}
  /* Linens & Hutch Custom Hero Carousel */
  .lh-hero {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .lh-hero__carousel {
    display: flex;
    width: 100%;
    overflow: hidden;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
  }

  .lh-hero__carousel::-webkit-scrollbar {
    display: none;
  }

  .lh-hero__slide {
    position: relative;
    min-height: 450px;
    flex: 0 0 100%;
    width: 100%;
    scroll-snap-align: start;
  }

  @media screen and (min-width: 750px) {
    .lh-hero__slide {
      min-height: 500px;
      max-height: 700px;
    }
  }

  .lh-hero__media {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .lh-hero__media::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(255,255,255,0.45) 0%, rgba(255,255,255,0.2) 30%, rgba(255,255,255,0) 50%);
    pointer-events: none;
  }

  .lh-hero__media img,
  .lh-hero__media svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: var(--image-position, 50% 50%) !important;
  }

  .lh-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    min-height: 450px;
    max-height: 550px;
    padding: 3rem;
    max-width: none;
    width: 100%;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .lh-hero__content {
      min-height: 750px;
      max-height: 950px;
      padding: 5rem 18rem;
    }
  }

  .lh-hero__text {
    max-width: 550px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.18), 0 4px 12px rgba(0, 0, 0, 0.1);
  }

  .lh-hero__content--right {
    justify-content: flex-end;
  }

  .lh-hero__eyebrow {
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #8b7355;
    margin: 0 0 1.5rem;
    display: block;
  }

  @media screen and (min-width: 750px) {
    .lh-hero__eyebrow {
      font-size: 1.125rem;
    }
  }

  .lh-hero__heading {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
    line-height: 1.15;
    text-shadow: 0 0 30px rgba(255,255,255,0.9), 0 0 60px rgba(255,255,255,0.6);
  }

  @media screen and (min-width: 750px) {
    .lh-hero__heading {
      font-size: 3rem;
    }
  }

  @media screen and (min-width: 990px) {
    .lh-hero__heading {
      font-size: 3.5rem;
    }
  }

  .lh-hero__subheading {
    font-size: 1.125rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #555;
    margin: 0 0 1.5rem;
    font-weight: 400;
    text-shadow: 0 0 20px rgba(255,255,255,0.9), 0 0 40px rgba(255,255,255,0.6);
  }

  @media screen and (min-width: 750px) {
    .lh-hero__subheading {
      font-size: 1.375rem;
    }
  }

  .lh-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: #1a1a1a;
    color: #fff;
    padding: 1.25rem 2.75rem;
    text-decoration: none;
    font-size: 1.0625rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 500;
    border-radius: 12px;
  }

  @media screen and (min-width: 750px) {
    .lh-hero__button {
      font-size: 1.125rem;
      padding: 1.5rem 3rem;
    }
  }

  .lh-hero__button:hover {
    background: #333;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  .lh-hero__button::after {
    content: '→';
    transition: transform 0.3s ease;
  }

  .lh-hero__button:hover::after {
    transform: translateX(4px);
  }

  /* Slider controls - glassmorphism effect */
  .lh-hero .slideshow__controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 1rem auto;
    width: fit-content;
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.4);
    box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px rgba(0,0,0,0.1);
  }

  .lh-hero .slider-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .lh-hero .slider-button:hover {
    opacity: 0.6;
  }

  .lh-hero .slider-button svg {
    width: 10px;
    height: 10px;
    opacity: 0.6;
  }

  .lh-hero .slider-button--prev svg {
    transform: rotate(90deg);
  }

  .lh-hero .slider-button--next svg {
    transform: rotate(-90deg);
  }

  .lh-hero .slider-counter__link--dots {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.2rem;
  }

  .lh-hero .slider-counter__link--dots .dot {
    width: 6px;
    height: 6px;
    border: none;
    background: rgba(0,0,0,0.25);
    border-radius: 50%;
    display: block;
    transition: all 0.3s ease;
  }

  .lh-hero .slider-counter__link--dots.slider-counter__link--active .dot,
  .lh-hero .slider-counter__link--dots:hover .dot {
    border: none;
    background: rgba(0,0,0,0.7);
    transform: scale(1.15);
  }
{%- endstyle -%}

<div
  class="lh-hero"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
>
  <div
    class="lh-hero__carousel"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="{{ section.settings.auto_rotate }}"
    data-speed="{{ section.settings.change_slides_speed }}"
  >
    {%- for block in section.blocks -%}
      <div
        class="lh-hero__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
        aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
        tabindex="-1"
      >
        <div class="lh-hero__media" style="--image-position: {{ block.settings.image_position | default: '50% 50%' }}">
          {%- if block.settings.image -%}
            {%- liquid
              assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
              assign sizes = '100vw'
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              assign fetch_priority = 'auto'
              if section.index == 1 and forloop.first
                assign fetch_priority = 'high'
              endif
            -%}
            {{
              block.settings.image
              | image_url: width: 3840
              | image_tag:
                loading: 'lazy',
                height: height,
                sizes: sizes,
                widths: widths,
                fetchpriority: fetch_priority
            }}
          {%- elsif block.settings.asset_image != blank -%}
            <img src="{{ block.settings.asset_image | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy">
          {%- else -%}
            {%- case forloop.index -%}
              {%- when 1 -%}
                <img src="{{ 'hero-silk-pillowcases.jpg' | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy" style="object-position: 85% 50%">
              {%- when 2 -%}
                <img src="{{ 'hero-bamboo-sheets.jpg' | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy">
              {%- when 3 -%}
                <img src="{{ 'hero-cotton-luxury.jpg' | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy" style="object-position: 30% 50%">
              {%- when 4 -%}
                <img src="{{ 'hero-texture.jpg' | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy">
              {%- when 5 -%}
                <img src="{{ 'hero-towels.jpg' | asset_url }}" alt="{{ block.settings.heading }}" loading="lazy">
              {%- else -%}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endcase -%}
          {%- endif -%}
        </div>

        <div class="lh-hero__content page-width{% if block.settings.text_position == 'right' %} lh-hero__content--right{% endif %}">
          <div class="lh-hero__text">
            {%- if block.settings.heading != blank -%}
              <h2 class="lh-hero__heading">{{ block.settings.heading }}</h2>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <p class="lh-hero__subheading">{{ block.settings.subheading }}</p>
            {%- endif -%}

            {%- if block.settings.button_label != blank -%}
              <a
                href="{{ block.settings.link | default: '#' }}"
                class="lh-hero__button"
              >
                {{ block.settings.button_label }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__controls slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter slider-counter--dots">
        <div class="slideshow__control-wrapper">
          {%- for block in section.blocks -%}
            <button
              class="slider-counter__link slider-counter__link--dots link{% if forloop.first %} slider-counter__link--active{% endif %}"
              aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
              aria-controls="Slider-{{ section.id }}"
            >
              <span class="dot"></span>
            </button>
          {%- endfor -%}
        </div>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  {%- endif -%}
</div>

<script>
  (function() {
    const slider = document.querySelector('#Slider-{{ section.id }}');
    const autoplay = slider?.dataset.autoplay === 'true';
    const speed = parseInt(slider?.dataset.speed || 5) * 1000;
    const dots = document.querySelectorAll('.lh-hero .slider-counter__link--dots');
    const prevBtn = document.querySelector('.lh-hero .slider-button--prev');
    const nextBtn = document.querySelector('.lh-hero .slider-button--next');

    if (!slider) return;

    const slides = Array.from(slider.querySelectorAll('.lh-hero__slide'));
    const totalSlides = slides.length;
    let slideWidth = slides[0].offsetWidth;
    let currentSlide = 0;
    let isTransitioning = false;
    let pendingSnap = null;

    // Clone first and last slides for seamless looping
    const firstClone = slides[0].cloneNode(true);
    const lastClone = slides[totalSlides - 1].cloneNode(true);
    firstClone.id = firstClone.id + '-clone';
    lastClone.id = lastClone.id + '-clone';
    slider.appendChild(firstClone);
    slider.insertBefore(lastClone, slides[0]);

    // Start at slide 1 (index 0) which is now offset by the prepended clone
    slider.scrollTo({ left: slideWidth, behavior: 'instant' });

    // Use scrollend to snap clones back to real slides — perfectly timed
    slider.addEventListener('scrollend', function() {
      if (pendingSnap !== null) {
        currentSlide = pendingSnap;
        slider.scrollTo({ left: (currentSlide + 1) * slideWidth, behavior: 'instant' });
        pendingSnap = null;
        updateDots();
      }
      isTransitioning = false;
    });

    function updateDots() {
      dots.forEach((dot, i) => {
        dot.classList.toggle('slider-counter__link--active', i === currentSlide);
      });
    }

    function goToSlide(index) {
      if (isTransitioning) return;
      currentSlide = index;
      slider.scrollTo({ left: (currentSlide + 1) * slideWidth, behavior: 'smooth' });
      updateDots();
    }

    function nextSlide() {
      if (isTransitioning) return;
      isTransitioning = true;
      currentSlide++;
      slider.scrollTo({ left: (currentSlide + 1) * slideWidth, behavior: 'smooth' });

      if (currentSlide >= totalSlides) {
        pendingSnap = 0;
        updateDots();
      } else {
        updateDots();
      }
    }

    function prevSlide() {
      if (isTransitioning) return;
      isTransitioning = true;
      currentSlide--;
      slider.scrollTo({ left: (currentSlide + 1) * slideWidth, behavior: 'smooth' });

      if (currentSlide < 0) {
        pendingSnap = totalSlides - 1;
        updateDots();
      } else {
        updateDots();
      }
    }

    // Recalculate on resize
    window.addEventListener('resize', function() {
      slideWidth = slides[0].offsetWidth;
      slider.scrollTo({ left: (currentSlide + 1) * slideWidth, behavior: 'instant' });
    });

    let autoplayInterval;
    if (autoplay) {
      autoplayInterval = setInterval(nextSlide, speed);
      slider.addEventListener('mouseenter', () => clearInterval(autoplayInterval));
      slider.addEventListener('mouseleave', () => {
        autoplayInterval = setInterval(nextSlide, speed);
      });
    }

    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => goToSlide(i));
    });

    if (prevBtn) prevBtn.addEventListener('click', prevSlide);
    if (nextBtn) nextBtn.addEventListener('click', nextSlide);

    updateDots();
  })();
</script>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "LH Hero Slideshow",
  "tag": "section",
  "class": "section section--lh-hero",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "text",
      "id": "accessibility_info",
      "label": "Slideshow description (for accessibility)",
      "default": "Slideshow about our brand"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "TOWELS MADE FOR EVERYDAY LUXURY"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "SOFT, ABSORBENT, AND TIMELESS"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "Image position",
          "options": [
            { "value": "15% 50%", "label": "Far left" },
            { "value": "30% 50%", "label": "Left" },
            { "value": "50% 50%", "label": "Center" },
            { "value": "70% 50%", "label": "Right" },
            { "value": "85% 50%", "label": "Far right" }
