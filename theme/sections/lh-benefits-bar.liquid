{%- style -%}
  /* Linens & Hutch Benefits Bar - Card Style */
  .lh-benefits-bar {
    background: #fff;
    padding: 0 1.5rem 4rem;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar {
      padding: 0 3rem 5rem;
    }
  }

  .lh-benefits-bar__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .lh-benefits-bar__items {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar__items {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  .lh-benefits-bar__item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.25rem 1.5rem;
    border: 1px solid #e0e0e0;
    background: #fff;
    transition: all 0.3s ease;
  }

  .lh-benefits-bar__item:hover {
    border-color: #1a1a1a;
  }

  .lh-benefits-bar__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
  }

  .lh-benefits-bar__text {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0;
    color: #1a1a1a;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar__text {
      font-size: 0.9375rem;
    }
  }

  .lh-benefits-bar__link {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
  }

  .lh-benefits-bar__arrow {
    display: inline-block;
    font-size: 1rem;
    font-weight: 400;
    color: #1a1a1a;
    transition: transform 0.3s ease;
  }

  .lh-benefits-bar__item:hover .lh-benefits-bar__arrow {
    transform: translateX(4px);
  }
{%- endstyle -%}

<section class="lh-benefits-bar">
  <div class="lh-benefits-bar__container">
    {%- if section.blocks.size > 0 -%}
      <div class="lh-benefits-bar__items">
        {%- for block in section.blocks -%}
          <div class="lh-benefits-bar__item" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="lh-benefits-bar__link">
                <span class="lh-benefits-bar__text">{{ block.settings.text }}</span>
                <span class="lh-benefits-bar__arrow">→</span>
              </a>
            {%- else -%}
              <div class="lh-benefits-bar__content">
                <span class="lh-benefits-bar__text">{{ block.settings.text }}</span>
                <span class="lh-benefits-bar__arrow">→</span>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

