{%- style -%}
  /* Linens & Hutch Benefits Bar */
  .lh-benefits-bar {
    background: #2d3436;
    color: #fff;
    padding: 0 2rem 4rem;
  }

  .lh-benefits-bar__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .lh-benefits-bar__items {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar__items {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 0;
    }
  }

  .lh-benefits-bar__item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar__item {
      flex: 1;
      justify-content: center;
      text-align: center;
    }

    .lh-benefits-bar__item:not(:last-child)::after {
      content: '|';
      position: absolute;
      right: -1rem;
      opacity: 0.3;
      font-weight: 300;
    }
  }

  .lh-benefits-bar__text {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
    flex: 1;
  }

  @media screen and (min-width: 750px) {
    .lh-benefits-bar__text {
      font-size: 1rem;
    }
  }

  .lh-benefits-bar__link {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: opacity 0.3s ease;
  }

  .lh-benefits-bar__link:hover {
    opacity: 0.7;
  }

  .lh-benefits-bar__arrow {
    display: inline-block;
    font-size: 1.125rem;
    font-weight: 300;
    margin-left: 0.5rem;
    transition: transform 0.3s ease;
  }

  .lh-benefits-bar__link:hover .lh-benefits-bar__arrow {
    transform: translateX(4px);
  }

  @media screen and (max-width: 749px) {
    .lh-benefits-bar__arrow {
      margin-left: auto;
    }
  }
{%- endstyle -%}

<section class="lh-benefits-bar">
  <div class="lh-benefits-bar__container">
    {%- if section.blocks.size > 0 -%}
      <div class="lh-benefits-bar__items">
        {%- for block in section.blocks -%}
          <div class="lh-benefits-bar__item" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="lh-benefits-bar__link">
                <span class="lh-benefits-bar__text">{{ block.settings.text }}</span>
                <span class="lh-benefits-bar__arrow">→</span>
              </a>
            {%- else -%}
              <span class="lh-benefits-bar__text">{{ block.settings.text }}</span>
              <span class="lh-benefits-bar__arrow">→</span>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

