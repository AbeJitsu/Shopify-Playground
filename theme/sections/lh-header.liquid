{{ 'section-header.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Linens & Hutch Header Styles - LARGER FONTS */
  .lh-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: #fff;
  }

  .lh-header__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.75rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .lh-header__left,
  .lh-header__right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    min-width: 120px;
  }

  .lh-header__left {
    justify-content: flex-start;
  }

  .lh-header__right {
    justify-content: flex-end;
  }

  .lh-header__logo {
    flex: 1;
    text-align: center;
  }

  .lh-header__logo-link {
    display: inline-block;
    text-decoration: none;
  }

  .lh-header__logo-image {
    height: 40px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
  }

  @media screen and (min-width: 750px) {
    .lh-header__logo-image {
      height: 50px;
      max-width: 280px;
    }
  }

  @media screen and (min-width: 990px) {
    .lh-header__logo-image {
      height: 55px;
      max-width: 320px;
    }
  }

  .lh-header__logo-text {
    font-family: 'Playfair Display', 'Times New Roman', serif;
    font-size: 2.25rem;
    font-weight: 400;
    font-style: italic;
    color: #1a1a1a;
    text-decoration: none;
    letter-spacing: 0.02em;
  }

  @media screen and (min-width: 750px) {
    .lh-header__logo-text {
      font-size: 2.75rem;
    }
  }

  @media screen and (min-width: 990px) {
    .lh-header__logo-text {
      font-size: 3rem;
    }
  }

  .lh-header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    cursor: pointer;
    color: #1a1a1a;
    transition: opacity 0.3s ease;
  }

  .lh-header__icon:hover {
    opacity: 0.6;
  }

  .lh-header__icon svg {
    width: 26px;
    height: 26px;
    stroke-width: 1.5;
  }

  .lh-header__cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    background: #1a1a1a;
    color: #fff;
    font-size: 0.75rem;
    font-weight: 600;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Navigation */
  .lh-nav {
    border-top: 1px solid #f0f0f0;
    background: #fff;
  }

  .lh-nav__list {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 1.25rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media screen and (min-width: 990px) {
    .lh-nav__list {
      gap: 2.5rem;
    }
  }

  .lh-nav__item {
    position: relative;
  }

  .lh-nav__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    padding: 0.625rem 0;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 990px) {
    .lh-nav__link {
      font-size: 1rem;
    }
  }

  .lh-nav__link:hover {
    border-bottom-color: #1a1a1a;
  }

  .lh-nav__link svg {
    width: 12px;
    height: 12px;
    transition: transform 0.3s ease;
  }

  .lh-nav__item:hover .lh-nav__link svg {
    transform: rotate(180deg);
  }

  /* Mobile menu toggle */
  .lh-header__menu-toggle {
    display: flex;
  }

  @media screen and (min-width: 990px) {
    .lh-header__menu-toggle {
      display: none;
    }
  }

  /* Hide nav on mobile */
  .lh-nav {
    display: none;
  }

  @media screen and (min-width: 990px) {
    .lh-nav {
      display: block;
    }
  }

  /* Dropdown styles */
  .lh-nav__dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    min-width: 220px;
    padding: 1.25rem 0;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 100;
  }

  .lh-nav__item:hover .lh-nav__dropdown {
    opacity: 1;
    visibility: visible;
  }

  .lh-nav__dropdown-link {
    display: block;
    padding: 0.75rem 1.75rem;
    font-size: 0.9375rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #555;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .lh-nav__dropdown-link:hover {
    color: #1a1a1a;
    background: #fafafa;
  }
{%- endstyle -%}

<header class="lh-header">
  <div class="lh-header__wrapper">
    <div class="lh-header__left">
      {%- comment -%} Mobile menu toggle {%- endcomment -%}
      <button type="button" class="lh-header__icon lh-header__menu-toggle" aria-label="Open menu">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <line x1="3" y1="6" x2="21" y2="6"/>
          <line x1="3" y1="12" x2="21" y2="12"/>
          <line x1="3" y1="18" x2="21" y2="18"/>
        </svg>
      </button>

      {%- comment -%} Search {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="lh-header__icon" aria-label="Search">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="11" cy="11" r="8"/>
          <line x1="21" y1="21" x2="16.65" y2="16.65"/>
        </svg>
      </a>
    </div>

    <div class="lh-header__logo">
      <a href="{{ routes.root_url }}" class="lh-header__logo-link">
        {%- if section.settings.logo != blank -%}
          {{ section.settings.logo | image_url: height: 110 | image_tag: class: 'lh-header__logo-image', alt: shop.name }}
        {%- else -%}
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="lh-header__logo-image" onerror="this.style.display='none';this.nextElementSibling.style.display='inline';">
          <span class="lh-header__logo-text" style="display:none;">{{ section.settings.logo_text | default: 'Linens & Hutch' }}</span>
        {%- endif -%}
      </a>
    </div>

    <div class="lh-header__right">
      {%- comment -%} Account {%- endcomment -%}
      <a href="{{ routes.account_url }}" class="lh-header__icon" aria-label="Account">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
      </a>

      {%- comment -%} Cart {%- endcomment -%}
      <a href="{{ routes.cart_url }}" class="lh-header__icon" aria-label="Cart" style="position: relative;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
          <line x1="3" y1="6" x2="21" y2="6"/>
          <path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
        {%- if cart.item_count > 0 -%}
          <span class="lh-header__cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    </div>
  </div>

  {%- comment -%} Navigation {%- endcomment -%}
  <nav class="lh-nav" aria-label="Main navigation">
    <ul class="lh-nav__list">
      {%- for block in section.blocks -%}
        <li class="lh-nav__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | default: '#' }}" class="lh-nav__link">
            {{ block.settings.title }}
            {%- if block.settings.has_dropdown -%}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"/>
              </svg>
            {%- endif -%}
          </a>

          {%- if block.settings.has_dropdown -%}
            <div class="lh-nav__dropdown">
              {%- if block.settings.dropdown_link_1 != blank -%}
                <a href="{{ block.settings.dropdown_link_1 }}" class="lh-nav__dropdown-link">
                  {{ block.settings.dropdown_text_1 }}
                </a>
              {%- endif -%}
              {%- if block.settings.dropdown_link_2 != blank -%}
                <a href="{{ block.settings.dropdown_link_2 }}" class="lh-nav__dropdown-link">
                  {{ block.settings.dropdown_text_2 }}
                </a>
              {%- endif -%}
              {%- if block.settings.dropdown_link_3 != blank -%}
                <a href="{{ block.settings.dropdown_link_3 }}" class="lh-nav__dropdown-link">
                  {{ block.settings.dropdown_text_3 }}
                </a>
              {%- endif -%}
              {%- if block.settings.dropdown_link_4 != blank -%}
                <a href="{{ block.settings.dropdown_link_4 }}" class="lh-nav__dropdown-link">
                  {{ block.settings.dropdown_text_4 }}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>
</header>

