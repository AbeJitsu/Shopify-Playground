{%- style -%}
  /* Linens & Hutch Commitment Section */
  .lh-commitment {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
    color: #fff;
    padding: 5rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .lh-commitment::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.1) 50%, transparent 100%);
  }

  @media screen and (min-width: 750px) {
    .lh-commitment {
      padding: 7rem 2rem;
    }
  }

  .lh-commitment__content {
    max-width: 850px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .lh-commitment__title {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0 0 2.5rem;
    color: #fff;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__title {
      font-size: 1.75rem;
    }
  }

  .lh-commitment__text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__text {
      font-size: 1.4375rem;
    }
  }

  .lh-commitment__links {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 3.5rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    white-space: nowrap;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .lh-commitment__link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.75rem 2rem;
    background: linear-gradient(135deg, #2a2a2a 0%, #333 50%, #2a2a2a 100%);
    border: 1px solid rgba(255,255,255,0.08);
    text-decoration: none;
    color: #fff;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__link {
      font-size: 1.125rem;
    }
  }

  .lh-commitment__link:hover {
    background: linear-gradient(135deg, #333 0%, #3d3d3d 50%, #333 100%);
    border-color: rgba(255,255,255,0.15);
  }

  .lh-commitment__link-arrow {
    transition: transform 0.3s ease;
    font-size: 1.125rem;
  }

  .lh-commitment__link:hover .lh-commitment__link-arrow {
    transform: translateX(4px);
  }
{%- endstyle -%}

<section class="lh-commitment">
  <div class="lh-commitment__content">
    {%- if section.settings.title != blank -%}
      <h2 class="lh-commitment__title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <p class="lh-commitment__text">{{ section.settings.text }}</p>
    {%- endif -%}

  </div>

  {%- if section.blocks.size > 0 -%}
    <div class="lh-commitment__links">
      {%- for block in section.blocks -%}
        <a
          href="{{ block.settings.link | default: '#' }}"
          class="lh-commitment__link"
          {{ block.shopify_attributes }}
        >
          {{ block.settings.text }}
          <span class="lh-commitment__link-arrow">&rarr;</span>
        </a>
      {%- endfor -%}
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "LH Commitment",
  "tag": "section",
  "class": "section section--lh-commitment",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "OUR COMMITMENT TO YOU"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At Linens & Hutch, our mission is to provide you with the highest quality bedding products at unbeatable prices. We back our products with a 100% money-back guarantee. If you're not completely satisfied with your purchase, our dedicated customer support team is here to ensure your satisfaction."
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "101-Night Guarantee"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LH Commitment",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "text": "101-Night Guarantee"
          }
        },
        {
          "type": "link",
          "settings": {
            "text": "Free Shipping"
          }
        },
        {
          "type": "link",
          "settings": {
            "text": "Free Returns"
          }
        }
      ]
    }
  ]
}
{% endschema %}
