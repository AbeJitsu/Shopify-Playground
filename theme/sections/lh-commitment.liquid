{%- style -%}
  /* Linens & Hutch Commitment Section Styles - IMPROVED */
  .lh-commitment {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
    color: #fff;
    padding: 5rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .lh-commitment::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.1) 50%, transparent 100%);
  }

  @media screen and (min-width: 750px) {
    .lh-commitment {
      padding: 7rem 2rem;
    }
  }

  .lh-commitment__content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .lh-commitment__title {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin: 0 0 2rem;
    color: #c9a87c;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__title {
      font-size: 0.9375rem;
    }
  }

  .lh-commitment__text {
    font-size: 1.0625rem;
    line-height: 1.9;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    font-weight: 300;
    letter-spacing: 0.01em;
  }

  @media screen and (min-width: 750px) {
    .lh-commitment__text {
      font-size: 1.125rem;
    }
  }

  .lh-commitment__features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem 4rem;
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .lh-commitment__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .lh-commitment__feature-icon {
    width: 32px;
    height: 32px;
    stroke: #c9a87c;
    stroke-width: 1.5;
    fill: none;
    transition: transform 0.3s ease;
  }

  .lh-commitment__feature:hover .lh-commitment__feature-icon {
    transform: scale(1.1);
  }
{%- endstyle -%}

<section class="lh-commitment">
  <div class="lh-commitment__content">
    {%- if section.settings.title != blank -%}
      <h2 class="lh-commitment__title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <p class="lh-commitment__text">{{ section.settings.text }}</p>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="lh-commitment__features">
        {%- for block in section.blocks -%}
          <div class="lh-commitment__feature" {{ block.shopify_attributes }}>
            {%- case block.settings.icon -%}
              {%- when 'shipping' -%}
                <svg class="lh-commitment__feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                </svg>
              {%- when 'guarantee' -%}
                <svg class="lh-commitment__feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  <path d="M9 12l2 2 4-4"/>
                </svg>
              {%- when 'support' -%}
                <svg class="lh-commitment__feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
              {%- when 'quality' -%}
                <svg class="lh-commitment__feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              {%- else -%}
                <svg class="lh-commitment__feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M9 12l2 2 4-4"/>
                </svg>
            {%- endcase -%}
            <span>{{ block.settings.text }}</span>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "LH Commitment",
  "tag": "section",
  "class": "section section--lh-commitment",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "OUR COMMITMENT TO YOU"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At Linens & Hutch, our mission is to provide you with the highest quality bedding products at unbeatable prices. We back our products with a 100% money-back guarantee. If you're not completely satisfied with your purchase, our dedicated customer support team is here to ensure your satisfaction."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "shipping",
              "label": "Shipping"
            },
            {
              "value": "guarantee",
              "label": "Guarantee"
            },
            {
              "value": "support",
              "label": "Support"
            },
            {
              "value": "quality",
              "label": "Quality"
            },
            {
              "value": "check",
              "label": "Checkmark"
            }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free Shipping"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LH Commitment",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "shipping",
            "text": "Free Shipping & Returns"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "guarantee",
            "text": "101-Night Guarantee"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "support",
            "text": "Dedicated Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}
