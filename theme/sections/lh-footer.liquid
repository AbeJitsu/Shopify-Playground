{%- style -%}
  .lh-footer {
    background: #1a2a3a;
    color: #fff;
    padding: 3rem 1.5rem 2rem;
  }

  @media screen and (min-width: 750px) {
    .lh-footer {
      padding: 4rem 3rem 2rem;
    }
  }

  .lh-footer__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .lh-footer__top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 750px) {
    .lh-footer__top {
      grid-template-columns: 1fr 1fr 1.5fr;
      gap: 3rem;
    }
  }

  .lh-footer__column-heading {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0 0 1.25rem;
    color: #fff;
  }

  .lh-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .lh-footer__links li {
    margin-bottom: 0.75rem;
  }

  .lh-footer__links a {
    color: #fff;
    text-decoration: none;
    font-size: 0.9375rem;
    letter-spacing: 0.05em;
    transition: opacity 0.3s ease;
  }

  .lh-footer__links a:hover {
    opacity: 0.7;
  }

  .lh-footer__newsletter-heading {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0 0 0.5rem;
    color: #fff;
  }

  .lh-footer__newsletter-text {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  .lh-footer__newsletter-form {
    display: flex;
    gap: 0;
  }

  .lh-footer__newsletter-input {
    flex: 1;
    padding: 0.875rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: #fff;
    font-size: 0.875rem;
  }

  .lh-footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .lh-footer__newsletter-button {
    padding: 0.875rem 1.5rem;
    background: #fff;
    color: #1a2a3a;
    border: none;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .lh-footer__newsletter-button:hover {
    opacity: 0.9;
  }

  .lh-footer__social {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .lh-footer__social a {
    color: #fff;
    transition: opacity 0.3s ease;
  }

  .lh-footer__social a:hover {
    opacity: 0.7;
  }

  .lh-footer__social svg {
    width: 20px;
    height: 20px;
  }

  .lh-footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1rem;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .lh-footer__bottom a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .lh-footer__bottom a:hover {
    color: #fff;
  }

  .lh-footer__bottom-separator {
    color: rgba(255, 255, 255, 0.3);
  }
{%- endstyle -%}

<footer class="lh-footer">
