{%- style -%}
  /* Linens & Hutch Compact Footer */
  .lh-footer {
    background: #1a2a3a;
    color: #fff;
  }

  /* Row 1: Nav bar with brand, dropdowns, newsletter */
  .lh-footer__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .lh-footer__brand {
    font-size: 1.125rem;
    font-weight: 400;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    white-space: nowrap;
    color: #fff;
  }

  .lh-footer__menus {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* Dropdown trigger */
  .lh-footer__dropdown {
    position: relative;
  }

  .lh-footer__dropdown-trigger {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.85);
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    cursor: pointer;
    padding: 0.5rem 1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .lh-footer__dropdown-trigger:hover {
    color: #fff;
  }

  .lh-footer__dropdown-trigger .caret {
    font-size: 0.5rem;
    transition: transform 0.2s ease;
  }

  .lh-footer__dropdown:hover .caret {
    transform: rotate(180deg);
  }

  /* Dropdown panel */
  .lh-footer__dropdown-panel {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: #233445;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 0.75rem 0;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
    box-shadow: 0 -8px 30px rgba(0, 0, 0, 0.3);
    z-index: 10;
  }

  .lh-footer__dropdown:hover .lh-footer__dropdown-panel {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .lh-footer__dropdown-panel a {
    display: block;
    padding: 0.5rem 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9375rem;
    letter-spacing: 0.08em;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .lh-footer__dropdown-panel a:hover {
    background: rgba(255, 255, 255, 0.08);
    color: #fff;
  }

  /* Newsletter inline */
  .lh-footer__newsletter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .lh-footer__newsletter-label {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
    margin-right: 0.75rem;
    white-space: nowrap;
  }

  .lh-footer__newsletter-input {
    padding: 0.6rem 0.875rem;
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 6px;
    background: transparent;
    color: #fff;
    font-size: 0.9375rem;
    letter-spacing: 0.04em;
    width: 200px;
    transition: border-color 0.2s ease;
  }

  .lh-footer__newsletter-input:focus {
    border-color: rgba(255, 255, 255, 0.6);
    outline: none;
  }

  .lh-footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .lh-footer__newsletter-button {
    padding: 0.6rem 1rem;
    background: #fff;
    color: #1a2a3a;
    border: none;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  .lh-footer__newsletter-button:hover {
    opacity: 0.85;
  }

  /* Row 2: Social icons */
  .lh-footer__social-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.25rem;
    padding: 1rem 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .lh-footer__social-row a {
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.2s ease, transform 0.2s ease;
    display: flex;
  }

  .lh-footer__social-row a:hover {
    color: #fff;
    transform: translateY(-2px);
  }

  .lh-footer__social-row svg {
    width: 18px;
    height: 18px;
  }

  /* Row 3: Copyright & policy links */
  .lh-footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1rem 2rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.4rem 0.75rem;
    font-size: 0.875rem;
    letter-spacing: 0.04em;
    color: rgba(255, 255, 255, 0.5);
  }

  .lh-footer__bottom a {
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .lh-footer__bottom a:hover {
    color: #fff;
  }

  .lh-footer__bottom-separator {
    color: rgba(255, 255, 255, 0.2);
  }

  /* Mobile: stack nav row */
  @media screen and (max-width: 749px) {
    .lh-footer__nav {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem 1.5rem 1rem;
    }

    .lh-footer__newsletter {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
      align-items: center;
    }

    .lh-footer__newsletter-label {
      margin-right: 0;
    }

    .lh-footer__newsletter-form-row {
      display: flex;
      width: 100%;
      max-width: 320px;
    }

    .lh-footer__newsletter-input {
      flex: 1;
      width: auto;
    }

    .lh-footer__dropdown-panel {
      left: 50%;
      transform: translateX(-50%) translateY(8px);
    }

    .lh-footer__dropdown:hover .lh-footer__dropdown-panel {
      transform: translateX(-50%) translateY(0);
    }
  }
{%- endstyle -%}

