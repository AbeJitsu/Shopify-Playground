{%- style -%}
  .lh-image-text {
    padding: 4rem 1.5rem;
    background: #f5f5f0;
  }

  @media screen and (min-width: 750px) {
    .lh-image-text {
      padding: 5rem;
    }
  }

  .lh-image-text__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .lh-image-text__container {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .lh-image-text__image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 4px;
    background: #e5e5e0;
  }

  .lh-image-text__image img,
  .lh-image-text__image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .lh-image-text__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .lh-image-text__heading {
    font-size: 1.75rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
    color: #1a1a1a;
    line-height: 1.3;
  }

  @media screen and (min-width: 750px) {
    .lh-image-text__heading {
      font-size: 2.25rem;
    }
  }

  .lh-image-text__text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }

  .lh-image-text__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: #1a1a1a;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    transition: background 0.3s ease;
    width: fit-content;
  }

  .lh-image-text__button:hover {
    background: #333;
  }

  .lh-image-text__container--image-right .lh-image-text__image {
    order: 2;
  }

  .lh-image-text__container--image-right .lh-image-text__content {
    order: 1;
  }

  @media screen and (max-width: 749px) {
    .lh-image-text__container--image-right .lh-image-text__image,
    .lh-image-text__container--image-right .lh-image-text__content {
      order: unset;
    }
  }
{%- endstyle -%}

<section class="lh-image-text">
  <div class="lh-image-text__container{% if section.settings.image_position == 'right' %} lh-image-text__container--image-right{% endif %}">
    <div class="lh-image-text__image">
      {%- if section.settings.image -%}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.heading }}
      {%- elsif section.settings.fallback_image != blank -%}
        <img src="{{ section.settings.fallback_image | asset_url }}" alt="{{ section.settings.heading }}" loading="lazy">
      {%- elsif section.settings.heading contains 'PILLOW' -%}
        <img src="{{ 'promo-pillows.jpg' | asset_url }}" alt="{{ section.settings.heading }}" loading="lazy">
      {%- elsif section.settings.heading contains 'QUILT' -%}
        <img src="{{ 'promo-quilts.jpg' | asset_url }}" alt="{{ section.settings.heading }}" loading="lazy">
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

    <div class="lh-image-text__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="lh-image-text__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="lh-image-text__text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link | default: '#' }}" class="lh-image-text__button">
          {{ section.settings.button_label }} &rarr;
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "LH Image with Text",
  "tag": "section",
  "class": "section section--lh-image-text",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "fallback_image",
      "label": "Fallback image filename",
      "info": "Asset filename to use if no image is uploaded (e.g., promo-pillows.jpg)"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ELEVATE YOUR SPACE WITH LUXE THROW PILLOWS"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Style meets comfort—explore our collection of plush, decorative pillows that add the perfect finishing touch to any room."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "LH Image with Text",
      "settings": {
        "heading": "ELEVATE YOUR SPACE WITH LUXE THROW PILLOWS",
        "text": "Style meets comfort—explore our collection of plush, decorative pillows that add the perfect finishing touch to any room.",
        "button_label": "SHOP NOW",
        "image_position": "right"
      }
    }
  ]
}
{% endschema %}
