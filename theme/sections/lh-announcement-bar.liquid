{%- style -%}
  /* Linens & Hutch Announcement Bar - PREMIUM */
  .lh-announcement {
    background: #1a1a1a;
    color: #fff;
    text-align: center;
    padding: 1.125rem 1.5rem;
  }

  .lh-announcement__text {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .lh-announcement__text {
      font-size: 1rem;
      letter-spacing: 0.12em;
    }
  }

  .lh-announcement__text a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .lh-announcement__text a:hover {
    opacity: 0.8;
  }

  .lh-announcement__divider {
    display: inline-block;
    margin: 0 1rem;
    opacity: 0.5;
  }
{%- endstyle -%}

{%- if section.blocks.size > 0 -%}
  <div class="lh-announcement" role="region" aria-label="{{ 'sections.announcement_bar.announcement_label' | t }}">
    <p class="lh-announcement__text">
      {%- for block in section.blocks -%}
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
        {%- else -%}
          <span>{{ block.settings.text }}</span>
        {%- endif -%}
        {%- unless forloop.last -%}
          <span class="lh-announcement__divider">|</span>
        {%- endunless -%}
      {%- endfor -%}
    </p>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "LH Announcement Bar",
  "tag": "section",
  "class": "section section--lh-announcement",
  "settings": [],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "FREE SHIPPING & RETURNS"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LH Announcement Bar",
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "text": "FREE SHIPPING & RETURNS"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "text": "101-NIGHT GUARANTEE"
          }
        }
      ]
    }
  ]
}
{% endschema %}
